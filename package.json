{
  "name": "tanmi-workspace",
  "version": "1.6.4",
  "description": "TanmiWorkspace MCP Server - 面向 AI 编程助手的分形任务跟踪系统",
  "type": "module",
  "main": "dist/check-node-version.js",
  "bin": {
    "tanmi-workspace": "./dist/check-node-version.js",
    "tanmi-workspace-hooks": "./scripts/install-global.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "web/dist/",
    "plugin/",
    "scripts/",
    "templates/",
    "README.md",
    "CHANGELOG.md",
    "配置方式.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanmika/TanmiWorkspace.git"
  },
  "homepage": "https://github.com/tanmika/TanmiWorkspace#readme",
  "bugs": {
    "url": "https://github.com/tanmika/TanmiWorkspace/issues"
  },
  "author": "Tanmi <tanmika0106@gmail.com>",
  "scripts": {
    "build": "tsc",
    "build:all": "tsc && cd web && npm run build",
    "dev": "tsc --watch",
    "dev:all": "concurrently -n api,web -c blue,green \"npm run start:http:dev\" \"cd web && npm run dev\"",
    "start": "node dist/check-node-version.js",
    "start:mcp": "DISABLE_HTTP=true node dist/check-node-version.js",
    "start:mcp:dev": "TANMI_DEV=true DISABLE_HTTP=true node dist/check-node-version.js",
    "start:http": "node dist/http/index.js",
    "start:http:dev": "TANMI_DEV=true node dist/http/index.js",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "mcp",
    "workspace",
    "task-management",
    "ai",
    "claude",
    "model-context-protocol"
  ],
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.3.0",
    "@inquirer/prompts": "^8.1.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fastify": "^5.6.2",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/update-notifier": "^6.0.8",
    "concurrently": "^9.2.1",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
