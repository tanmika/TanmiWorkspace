{
  "name": "tanmi-workspace",
  "version": "1.0.0",
  "description": "TanmiWorkspace MCP Server - 工作区和节点管理",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tanmi-workspace": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:all": "tsc && cd web && npm run build",
    "dev": "tsc --watch",
    "dev:all": "concurrently -n api,web -c blue,green \"npm run start:http:dev\" \"cd web && npm run dev\"",
    "start": "node dist/index.js",
    "start:mcp": "DISABLE_HTTP=true node dist/index.js",
    "start:mcp:dev": "TANMI_DEV=true DISABLE_HTTP=true node dist/index.js",
    "start:http": "node dist/http/index.js",
    "start:http:dev": "TANMI_DEV=true node dist/http/index.js",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "mcp",
    "workspace",
    "task-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fastify": "^5.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
